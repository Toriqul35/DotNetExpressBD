@model DotNetExpress.Model.CustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section MyStyle
{
    <link href="~/CSS/Business/Category/Add.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
}
<center>
    <h2 style="color:green"> Update Any Customer</h2>
    <div class="menu">
        <table>
            <tr>
                <td>
                    <a href="~/Customer/AllCustomer"><input class='btn btn-info btn-xs' type="submit" value="View Customer" /></a>
                    <a href="~/Customer/Add"><input class='btn btn-info btn-xs' type="submit" value="Create New" /></a>
                </td>
            </tr>
        </table>
    </div>

    <div class="menu">
        <form method="post">
            <table>
                <tr>
                    <td>Code</td>
                    <td><input Class="td" type="text" name="Code" value="@Model.Code" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td><input Class="td" type="text" name="Name" value="@Model.Name" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Address</td>
                    <td><input Class="td" type="text" name="Address" value="@Model.Address" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input Class="td" type="text" name="Email" value="@Model.Email" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Contact</td>
                    <td><input Class="td" type="text" name="Contact" value="@Model.Contact" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>Loyolty Point</td>
                    <td><input Class="td" type="text" name="Loyolty_Point" value="@Model.Loyolty_Point" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input class='btn btn-info btn-xs' type="submit" value="Update" /></td>
                    <td>
                        @if (ViewBag.Message != null)
                        {
                            <h3>
                                <b>
                                    @ViewBag.Message
                                </b>
                            </h3>
                        }

                    </td>
                </tr>

            </table>
        </form>
    </div>
</center>
@section MyScript
    {

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
