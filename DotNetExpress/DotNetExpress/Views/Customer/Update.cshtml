@model DotNetExpress.Model.CustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section MyStyle
{
    <link href="~/CSS/Business/Category/Add.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
}
<center>
    <h2 style="color:green ;margin-top:-15px; margin-left: -110px"> Update Any Customer</h2>
    <div class="menu" style="margin-left:-40px; margin-top:-10px">
        <table>
            <tr>
                <td>
                    <a href="~/Customer/AllCustomer"><input class='btn btn-info btn-xs' type="submit" value="View Customer" /></a>
                    <a href="~/Customer/Add"><input class='btn btn-info btn-xs' type="submit" value="Create New" /></a>
                </td>
            </tr>
        </table>
    </div>

    <div class="menu">
        <form method="post">
            <table>
                <tr>
                    <td>@Html.LabelFor(c => c.Code)</td>
                    <td>@Html.TextBoxFor(c => c.Code, Model.Code, new { @placeholder = "Customer Code" })</td>
                    <td>@Html.ValidationMessageFor(c => c.Code)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Name)</td>
                    <td>@Html.TextBoxFor(c => c.Name, Model.Name, new { @placeholder = "Customer Name" })</td>
                    <td>@Html.ValidationMessageFor(c => c.Name)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Address)</td>
                    <td>@Html.TextBoxFor(c => c.Address, Model.Address, new { @placeholder = "Customer Address" })</td>
                    <td>@Html.ValidationMessageFor(c => c.Address)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Email)</td>
                    <td>@Html.TextBoxFor(c => c.Email, Model.Email, new { @placeholder = "Email Address" })</td>
                    <td>@Html.ValidationMessageFor(c => c.Email)</td>

                </tr>>
                <tr>
                    <td>@Html.LabelFor(c => c.Contact)</td>
                    <td>@Html.TextBoxFor(c => c.Contact, Model.Contact, new { @placeholder = "Cell Number" })</td>
                    <td>@Html.ValidationMessageFor(c => c.Contact)</td>

                </tr>
                <tr>
                    <td>@Html.LabelFor(c => c.Loyolty_Point)</td>
                    <td>@Html.TextBoxFor(c => c.Loyolty_Point, Model.Loyolty_Point, new { @placeholder = "Customer loylty point" })</td>
                    <td>@Html.ValidationMessageFor(c => c.Loyolty_Point)</td>

                </tr>
                <tr>
                    <td></td>
                    <td><input class='btn btn-info btn-xs' type="submit" value="Update" /></td>
                    <td>
                        @if (ViewBag.Message != null)
                        {
                            <h3>
                                <b>
                                    @ViewBag.Message
                                </b>
                            </h3>
                        }

                    </td>
                </tr>

            </table>
        </form>
    </div>
</center>
@section MyScript
    {

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
