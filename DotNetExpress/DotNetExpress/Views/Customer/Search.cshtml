@model IEnumerable<DotNetExpress.Model.Model.Customer>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MyStyle
{
    <link href="~/CSS/Business/Category/Add.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>

}
<center>
    <h2 style="margin-top:-15px">Search any Customer</h2>


    <div class="menu" style="margin-top:-10px">
        <table>
            <tr>
                <td>
                    @using (Html.BeginForm("Search", "Customer", FormMethod.Get))
                    {
                        @Html.TextBox("Searching")
                        <input class='btn btn-info btn-xs' type="submit" value="Search" />
                    }

                </td>
                <td><a href="~/Customer/AllCustomer"><input class='btn btn-info btn-xs' type="submit" value="View Customer" /></a></td>
            </tr>
        </table>
    </div>
    <table class="menu" style="margin-top:10px">
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Loyolty Point</th>
            <th>Action</th>
        </tr>
        @foreach (var customer in Model)
        {
    <tr>
        <td>@customer.Code</td>
        <td>@customer.Name</td>
        <td>@customer.Address</td>
        <td>@customer.Contact</td>
        <td>@customer.Email</td>
        <td>@customer.Loyolty_Point</td>
        <td>
            @Html.ActionLink("Update", "Update", "Category", new { Id = customer.Id }, new { @class = "btn btn-info btn-xs" })
            @Html.ActionLink("Delete", "Delete", "Category", new { Id = customer.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
        }
    </table>
</center>
@section MyScript
    {

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
