@model DotNetExpress.Model.CustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section MyStyle
{
    <link href="~/CSS/Business/Add.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title></title>

}<center>
    <h2 style="color:darkgreen; margin-top:-15px"> Search Any Customer </h2>

    <div class="menu" style="margin-left:-100px; margin-top:-10px">
        <table>
            <tr>
                <td>
                    <a href="~/Customer/Add" class="btn btn-primary btn-xs pull-right"><b>+</b>Add new Customer </a>
                    <a href="~/Customer/AllCustomer"><input class='btn btn-info btn-xs' type="submit" value="View Customer" /></a>
                </td>
            </tr>
        </table>
    </div>
</center>
<div class="menu" style="margin-left:380px">
    <form method="post">
        <table>
            <tr>
                <td>@Html.LabelFor(c => c.Name)</td>
                <td>@Html.TextBoxFor(c => c.Name, Model.Name, new { @placeholder = "Customer Name" })</td>
                <td>@Html.ValidationMessageFor(c => c.Name)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Email)</td>
                <td>@Html.TextBoxFor(c => c.Email, Model.Email, new { @placeholder = "Email Address" })</td>
                <td>@Html.ValidationMessageFor(c => c.Email)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Contact)</td>
                <td>@Html.TextBoxFor(c => c.Contact, Model.Contact, new { @placeholder = "Customer Contact" })</td>
                <td>@Html.ValidationMessageFor(c => c.Contact)</td>

            </tr>
            <tr>
                <td> Action </td>
                <td><input class='btn btn-info btn-xs' type="submit" value="Search" /></td>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <h3>
                            <b>
                                @ViewBag.Message
                            </b>
                        </h3>
                    }
                </td>
            </tr>
        </table>
    </form>
    @{

        Html.RenderPartial("~/Views/Shared/Customer/_CustomerDetails.cshtml", Model);
    }
</div>
@section MyScript
    {

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
