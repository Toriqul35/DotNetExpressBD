@model DotNetExpress.Model.ProductViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section MyStyle
{
    <link href="~/CSS/Business/Add.css" rel="stylesheet" type="text/css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>

}
<center>
    <h2 style="color:darkgreen"> Create new Product </h2>
</center>
<div class="menu">
    <table>
        <tr>
            <td>
                <a href="~/Product/ViewProduct"><input class='btn btn-info btn-xs' type="submit" value="View Product" /></a>
            </td>
        </tr>
    </table>
</div>
<div class="menu">
    <form method="post">
        <table>
            <tr>
                <td>Category</td>
                <td>@Html.DropDownListFor(c => c.CategoryId, Model.CategorySelectListItems, "--Select--")</td>
                <td></td>
            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Code)</td>
                <td>@Html.TextBoxFor(c => c.Code, Model.Code)</td>
                <td>@Html.ValidationMessageFor(c => c.Code)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Name)</td>
                <td>@Html.TextBoxFor(c => c.Name, Model.Name)</td>
                <td>@Html.ValidationMessageFor(c => c.Name)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Reorder_lavel)</td>
                <td>@Html.TextBoxFor(c => c.Reorder_lavel, Model.Reorder_lavel)</td>
                <td>@Html.ValidationMessageFor(c => c.Reorder_lavel)</td>

            </tr>
            <tr>
                <td>@Html.LabelFor(c => c.Description)</td>
                <td>@Html.TextBoxFor(c => c.Description, Model.Description)</td>
                <td>@Html.ValidationMessageFor(c => c.Description)</td>

            </tr>
            
            <tr>
                <td> Action </td>
                <td><input class='btn btn-info btn-xs' type="submit" value="Create" /></td>
                <td>
                    @if (ViewBag.Message != null)
                    {
                        <h3>
                            <b>
                                @ViewBag.Message
                            </b>
                        </h3>
                    }
                </td>
            </tr>
        </table>
    </form>
</div>
@section MyScript
    {

    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
